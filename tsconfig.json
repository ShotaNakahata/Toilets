{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
  
    
    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
