{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "jsx": "react",

    /* Modules */
    "module": "ESNext",  // ここを変更
    "moduleResolution": "node",  // ここを追加
    "rootDir": "./src",
    
    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Paths */
    "baseUrl": "./src",  // ここを変更
    "paths": {
      "@/*": ["./*"]  // ここを変更
    }
  },
  "include": ["src", "src/types/**/*.d.ts", "src/components/ui"],
  "exclude": ["node_modules", "dist"]
}
