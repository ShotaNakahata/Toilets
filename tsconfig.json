{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",  // サーバーサイドでは最新のESバージョンを使うのが一般的です
    "jsx": "react",

    /* Modules */
    "module": "commonjs",  // サーバーサイドではcommonjsが一般的
    "moduleResolution": "node",
    "rootDir": "./src",
    
    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Paths */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src",
    "types/**/*.d.ts",  
    "src/components/ui"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
