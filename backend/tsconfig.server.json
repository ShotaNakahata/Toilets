{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "../dist/backend",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src",
        "src/types/**/*.d.ts",
        "node_modules/@types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/scripts",
        "src/routes/__tests__"
    ]
}